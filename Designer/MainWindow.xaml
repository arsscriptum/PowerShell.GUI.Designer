            VerticalAlignment="Top"
            Height="106"
            Width="350" Grid.ColumnSpan="1" Grid.Column="1">
            <Grid
                HorizontalAlignment="Left"
                Width="330" Height="76" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="158*"/>
                    <ColumnDefinition Width="7*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="label_actions_pcu" Content="actions" HorizontalAlignment="Left" Margin="9,1,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.469,0.323" Width="311" Grid.ColumnSpan="2"/>
                <Button x:Name="button_update_pcu" Content="Update" HorizontalAlignment="Left" Margin="235,36,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.389,0.27"/>
                <Button x:Name="button_start_pcu" Content="Start" HorizontalAlignment="Left" Margin="133,36,0,0" VerticalAlignment="Top" Width="75"/>
                <Button x:Name="button_stop_pcu" Content="Stop" HorizontalAlignment="Left" Margin="30,36,0,0" VerticalAlignment="Top" Width="75"/>
            </Grid>
        </GroupBox>
        <GroupBox
            Header="state"
            Margin="0,275,12.4,0"
            VerticalAlignment="Top"
            Height="104" Grid.Column="1" HorizontalAlignment="Right" Width="219">
            <Grid Margin="10,8,-46.6,-32.4" Height="106" HorizontalAlignment="Left" Width="207">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="9*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="0*"/>
                    <ColumnDefinition Width="0*"/>
                </Grid.ColumnDefinitions>
