                <TextBox x:Name="text_state_pcu" Height="23" Margin="20,51,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="68" Grid.Column="1"/>
                <Label x:Name="label_version_pcu" Content="Version" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="26" Width="50" Grid.ColumnSpan="2"/>
                <Label x:Name="label_state_pcu" Content="Status" HorizontalAlignment="Left" Margin="10,47,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.516,0.112" Height="26" Width="54" Grid.ColumnSpan="2"/>
            </Grid>
        </GroupBox>

        <GroupBox
            Header="connection"
            Margin="8.2,10,0,0"
            VerticalAlignment="Top"
            Height="110" Grid.Column="2" RenderTransformOrigin="0.989,0.486" HorizontalAlignment="Left" Width="328">
            <Grid Margin="27,10,22.8,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="573*"/>

                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,5,0,0" Width="266">
                    <TextBox x:Name="Octet1" Width="35" MaxLength="3" TextAlignment="Center" />
                    <TextBlock Text="." VerticalAlignment="Center" />
                    <TextBox x:Name="Octet2" Width="35" MaxLength="3" TextAlignment="Center" />
                    <TextBlock Text="." VerticalAlignment="Center" />
                    <TextBox x:Name="Octet3" Width="35" MaxLength="3" TextAlignment="Center" />
                    <TextBlock Text="." VerticalAlignment="Center" />
                    <TextBox x:Name="Octet4" Width="35" MaxLength="3" TextAlignment="Center" />
                    <Button Content="Validate" Width="90"  Margin="15,0,20,0" RenderTransformOrigin="0.795,0.61" />
