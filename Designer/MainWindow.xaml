<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="1190 DEVELOPMENT TOOLS" Height="450" Width="1551.372"
    x:Name="Window" ResizeMode="NoResize">
    <Grid Margin="0,10,28.6,-2" RenderTransformOrigin="0.815,0.516">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="590*"/>
            <ColumnDefinition Width="562*"/>
            <ColumnDefinition Width="363*"/>
        </Grid.ColumnDefinitions>

        <GroupBox
            Header="ccu remote logs"
            HorizontalAlignment="Left"
            Margin="2,10,0,0"
            VerticalAlignment="Top"
            Height="238"
            Width="574" Grid.Column="0">
